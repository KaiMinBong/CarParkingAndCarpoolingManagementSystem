<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/popup_background">

    <TextView
        android:id="@+id/popupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update End Time"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Show current Start Time -->
    <TextView
        android:id="@+id/currentStartTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Current Parking Duration"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">
        <TextView
            android:id="@+id/currentStartTime"
            android:layout_width="100dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/edittext_background"
            android:layout_height="50dp"
            android:text="6:00"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="50dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentEndTime"
            android:layout_width="100dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/edittext_background"
            android:layout_height="50dp"
            android:text="6:00"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/newEndTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="none"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:clickable="true"
        android:hint="Select time" />

    <!-- Buttons for Update and Cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/updateTimeButton"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/red"
            android:text="Extend"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_marginStart="20dp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:backgroundTint="#636363"/>

    </LinearLayout>
</LinearLayout>
